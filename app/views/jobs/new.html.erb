<nav id="navbar">
	<ul id="ul_navbar">
		<div id="logo">		
		<img src="../assets/hand.png" height="24px" width="24px">
		
		<h3>Stooper</h3>
		</div>
		<div id="nav_avatar">
	 		<li><%=image_tag @user.avatar.url(:thumb) %></li>
	 	</div>

	</ul>
</nav>

<div id="wrapper">
	<div id="wrapper_text">
		<h4>Submit a maintenance order</h4>
		<p>Select the type of work your apartment or designated area needs. Add as much detail as you can and set the priority.</p>
	</div>
	<div id="table_2">
		<%=form_for [current_user,@unit,@job], url: user_unit_jobs_path do |f|%>
		<%=f.label :type%>
		<%= f.select :title,["Electrical","HVAC","Plumbing","Other"], prompt: :select %>
		<div id="field">
		<%=f.label :note%>
		</div>
		<div id="note_field">
		<%=f.text_field :note%>
		</div>
		<div id="field">
		<%=f.label :priority%>
		</div>
		<%=f.text_field :priority%>

		<div id="submit">
		<%=f.submit 'Submit' %>
		</div>
		<%end%>
	</div>
	<div id="table_1">
		<ul>
			<li><%= mail_to "land@lord.com" do %>
				Contact your landlord
				<% end %> </li>
			<li><%=link_to 'View previous work orders', user_unit_jobs_path%></li>
			<li>View building documents</li>
			<li><%=link_to 'Go to the Lobby', lobby_path%></li>
		</ul>
	</div>
</div>
<%=link_to 'Lobby', lobby_path%>
