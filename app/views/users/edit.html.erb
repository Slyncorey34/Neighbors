<nav id="navbar">
  <ul id="ul_navbar">
    <div id="logo">   
	<img src="../assets/hand.png" height="24px" width="24px">
    <h3>Stooper</h3>
    </div>
    <div id="nav_avatar">
    <%= image_tag current_user.avatar.url(:thumb) %>
    </div>
    <div class="nav_logout">
    <h5><%=link_to "Profile", user_path(@user)%> <%=link_to "Log Out", logout_path%></h5>
  	</div>
  </ul>
</nav>
<div class="user_edit">
	<div id="fields_top">
		<p>Update your public profile</p>
	</div>
	<div id="user_avatar">
		<%=image_tag @user.avatar.url(:medium) %>
	</div>
	<div id="avatar_update">
		<%=form_for @user, method: :patch do |f| %>
		<%=f.file_field :avatar%>
		<div id="new_pic">
			<%=f.submit "Upload new photo"%>
		</div>
		<%end%>
	</div>
	<div id="user_fields">
		<%=form_for @user, method: :patch do |f|%>	
		<div id="field">
		<%=f.label :first_name %>
		</div>
		<%=f.text_field :fname%>
		<div id="field">
		<%=f.label :email%>
		</div>
		<%=f.text_field :email%>
		<div id="field">
		<%=f.label :password%>
		</div>
		<%=f.password_field :password%> 
		<br>
		<div id="submit">
		<%=f.submit "Save"%>
		</div> 
		<%end%>
	</div>
	</div>
</div>