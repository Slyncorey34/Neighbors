<h3>Welcome to the building!</h3>
<h5>new user sign up</h5>

<div class="sign-up-form">
	<%=form_for @user do |f| %>
	<%=f.label :apartment%>
	<br>
	<%= f.select :apt,["1a","1b","4d"], prompt: :select %>

	<br>
	<%=f.label :first_name%>
	<br>
	<%=f.text_field :fname%>
	<br>
	<%=f.label :email%>
	<br>
	<%=f.text_field :email %>
	<br>
	<%=f.label :password%>
	<br>
	<%=f.password_field :password %>
	<br>
	<%=f.label :Your_photo%><p>(optional)</p>
	<%=f.file_field :avatar%>
	<%=f.submit "Create Account" %>
	<%end%>
</div>